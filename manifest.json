{
  "manifest_version": 3,
  "name": "Instagram Image Scraper",
  "version": "1.0",
  "description": "Scrape images from Instagram posts",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon64.png",
      "48": "icon64.png",
      "128": "icon64.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js"]
    }
  ]
}
